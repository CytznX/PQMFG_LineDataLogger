import javax.swing.*;

public class JOptionPaneMultiInput 
{
	private static JTextField xField = new JTextField(5);
	private static JTextField yField = new JTextField(5);
	private static JPanel myPanel = new JPanel();

	public JOptionPaneMultiInput()
	{
		myPanel.add(new JLabel("IP:"));
		myPanel.add(xField);
		myPanel.add(Box.createHorizontalStrut(15)); // a spacer
		myPanel.add(new JLabel("Port:"));
		myPanel.add(yField);
	}
	public NETAddress ask() 
	{

		NETAddress myAdress = null;

		int result = JOptionPane.showConfirmDialog(null, myPanel, 
				"Please Enter X and Y Values", JOptionPane.OK_CANCEL_OPTION);
		if (result == JOptionPane.OK_OPTION) {
			System.out.println("x value: " + xField.getText());
			System.out.println("y value: " + yField.getText());
		}

	}
}