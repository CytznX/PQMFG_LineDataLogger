import java.io.IOException;
import java.net.Socket;

import javax.jws.soap.SOAPBinding.Use;

public class ClientAlpha
{
	//Some Initial Class Variables
	private Socket clientSocket = null;
	private String IpAddress = "";
	private int PortNum = 5005;
	
	//Default Constructor
	public ClientAlpha(int width,int Height)
	{
		
		/**
		 * Heres where we try and open up a connection to the server
		 * */
		try 
		{
			clientSocket = new Socket(IpAddress, PortNum);
		} 
		catch (IOException e) {
			System.out.println("Could Not Open connection to Server At: "+IpAddress+Integer.toString(PortNum));
		}
		
		/**
		 * After Connections Been Established
		 * */
		
		JOptionPaneMultiInput UserPrompt = new JOptionPaneMultiInput();
		NETAddress myAdress = UserPrompt.ask();
		
		System.out.println(myAdress.IP + " " + String.valueOf(myAdress.Port));
		
		
	}
	
	public static void main(String[] args) 
	{
		new ClientAlpha(0,0);
	}
}